from time import time

def find(n):
    i, m = n, n
    lhs, rhs = n * (n - 1), 0
    while (lhs != rhs and i != 0):
        i = i / 2
        rhs = 2 * m * (m - 1)
        if lhs < rhs: # smaller m
            m -= i
        else: # larger m
            m += i
    return lhs == rhs, m

start = time()
n = 10**12 + 1
while (n < 10**13):
    solved, m = find(n)
    if solved:
        print "N =", n, "\tM =", m, "\ttime = ", time()-start
        break
    elif (n % 1000000 == 0):
        print "N =", n, "Not solved"
    n += 1
